<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/yaMa"
            android:gravity="center"
            android:onClick="raise"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="增加留言数量"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/green"
            android:gravity="center"
            android:onClick="down"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="删减留言数量"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <nelson.com.horizontallibrary.HorizontalWithIndicator
        app:indicatorWidth="halfOfTxt"
        app:indicatorHeight="2dp"
        app:fontSize="13sp"
        app:setIndicatorWidth="20dp"
        app:outPaddingBottom="10dp"
        app:outPaddingTop="10dp"
        app:selectFontSize="15sp"
        app:textColor="@color/c_a9abad"
        app:selectTxtColor="@color/black"
        app:indicatorColor="@color/colorPrimaryDark"
        app:canLines="true"
        app:backGroundColor="@color/white"
        app:separateContentAndIndicator="false"
        app:selectTxtBgColor="@color/white"
        app:normalTxtBgColor="@color/white"
        app:goneIndicator="false"
        app:verticalLineWidth="1dp"
        app:titlePaddingTop="10dp"
        app:titlePaddingBottom="10dp"
        android:id="@+id/scro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>