<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HorizontalWithIndicator">
        <attr name="fontSize" format="dimension"/>
        <attr name="backGroundColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="indicatorColor" format="color"/>
        <attr name="canLines" format="boolean"/>
        <attr name="indicatorDrawable" format="reference"/>
        <attr name="contentPaddingTop" format="dimension"/>
        <attr name="contentPaddingBottom" format="dimension"/>
        <attr name="contentPaddingLeft" format="dimension"/>
        <attr name="contentPaddingRight" format="dimension"/>
        <attr name="titlePaddingTop" format="dimension"/>
        <attr name="titlePaddingBottom" format="dimension"/>
        <attr name="titlePaddingLeft" format="dimension"/>
        <attr name="titlePaddingRight" format="dimension"/>
        <attr name="indicatorMarginTop" format="dimension"/>
        <attr name="separateContentAndIndicator" format="boolean"/>
        <attr name="indicatorParentColor" format="color"/>
        <attr name="selectTxtBgColor" format="color"/>
        <attr name="normalTxtBgColor" format="color"/>
        <attr name="goneIndicator" format="boolean"/>
        <attr name="verticalLineWidth" format="dimension"/>
        <attr name="outDrawable" format="reference"/>
        <attr name="selectFontSize" format="dimension"/>
        <attr name="selectTxtColor" format="color"/>
        <attr name="indicatorWidth">
            <enum name="sameOfTxt" value="1"/>
            <enum name="halfOfTxt" value="2"/>
        </attr>
        <attr name="setIndicatorWidth" format="dimension"/>
        <attr name="indicatorHeight" format="dimension"/>
    </declare-styleable>
</resources>